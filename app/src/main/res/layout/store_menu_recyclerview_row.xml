<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/store_menu_row_title_textview"
        fontPath="notosanskr_regular_hestia.otf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="가나다라마바사"
        android:textColor="@color/black"
        android:textSize="14dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <View
        android:id="@+id/store_menu_row_line_view"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="15dp"
        android:background="@color/brownish_grey_two"
        app:layout_constraintBottom_toBottomOf="@+id/store_menu_row_title_textview"
        app:layout_constraintLeft_toRightOf="@+id/store_menu_row_title_textview"
        app:layout_constraintRight_toLeftOf="@+id/store_menu_row_cost_textview"
        app:layout_constraintTop_toTopOf="@+id/store_menu_row_title_textview" />

    <TextView
        android:id="@+id/store_menu_row_cost_textview"
        fontPath="notosanskr_bold_hestia.otf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="7,000원"
        android:textColor="@color/black"
        android:textSize="14dp"
        app:layout_constraintLeft_toRightOf="@+id/store_menu_row_line_view"
        app:layout_constraintRight_toRightOf="parent" />

</android.support.constraint.ConstraintLayout>