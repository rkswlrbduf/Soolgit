<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="7dp"
    app:cardUseCompatPadding="true">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/service_permission_title_textview"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:background="@drawable/border_1dp"
            android:gravity="center"
            android:text="@string/service_permission_title"
            android:textColor="@android:color/black"
            android:textSize="17dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent" />

        <FrameLayout
            android:id="@+id/container"
            android:layout_width="match_parent"
            android:background="@android:color/white"
            app:layout_constraintTop_toBottomOf="@+id/service_permission_title_textview"
            android:layout_height="200dp"></FrameLayout>

        <TextView
            android:id="@+id/service_permission_confirm_textview"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:text="@string/service_permission_confirm"
            android:textColor="#000000"
            android:textSize="15dp"
            android:gravity="center"
            android:background="@drawable/border_1dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/container"/>

    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>