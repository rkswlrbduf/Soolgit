<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingTop="11dp"
    android:paddingBottom="5dp">

    <ImageView
        android:id="@+id/home_tab_imageview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        app:layout_constraintVertical_weight="16"
        app:layout_constraintBottom_toTopOf="@+id/home_tab_textview"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@drawable/sample_image" />

    <TextView
        android:id="@+id/home_tab_textview"
        android:layout_width="wrap_content"
        app:layout_constraintVertical_weight="13"
        android:layout_height="wrap_content"
        android:text="í™ˆ"
        android:includeFontPadding="false"
        android:textColor="@color/brown_grey"
        android:textSize="9dp"
        app:layout_constraintTop_toBottomOf="@+id/home_tab_imageview"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

</android.support.constraint.ConstraintLayout>