<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/content_hotplace_home_row_store_image_cardview"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="160:113"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:cardCornerRadius="8dp"
        app:cardUseCompatPadding="false"
        app:cardElevation="0dp"
        android:elevation="0dp"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/main_home_content_hotplace_row_store_image_imageview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:src="@color/colorAccent" />

    </android.support.v7.widget.CardView>

    <TextView
        android:id="@+id/main_home_content_hotplace_row_store_name_textview"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="6dp"
        android:layout_marginTop="6dp"
        fontPath="notosanskr_bold_hestia.otf"
        android:textColor="@color/black"
        android:textSize="14dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/content_hotplace_home_row_store_image_cardview"
        tools:text="한성포차 청라점" />

    <TextView
        android:id="@+id/content_hotplace_home_row_store_theme_textview"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="6dp"
        android:textColor="@color/brownish_grey2"
        android:textSize="11dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/main_home_content_hotplace_row_store_name_textview"
        tools:text="#분위기 #가성비 #모임장소" />

</android.support.constraint.ConstraintLayout>

